<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        tools:context=".ui.activities.ChatActivity">
        <LinearLayout
            android:id="@+id/activity_chat_toolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/activity_chat_toolbar"
                android:layout_width="match_parent"
                android:elevation="0dp"
                android:background="@color/chatActivityToolbar"
                app:navigationIcon="@drawable/back_navigate_arrow_accent"
                android:layout_height="?android:actionBarSize">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginEnd="23dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/activity_chat_toolbarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/normal_text"
                        android:fontFamily="@font/sf_pro_semi_bold"
                        />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mySecondaryColor"
                />
            <LinearLayout
                android:id="@+id/activity_chat_alertLayout"
                android:layout_width="wrap_content"
                android:background="@drawable/round_cyclinder_primary"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/activity_chat_alertText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="@font/sf_pro"
                    android:textColor="@color/normal_text"
                    />
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_chat_rv"
            android:layout_above="@id/activity_bar_chatBar"
            android:layout_below="@id/activity_chat_toolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />
        <LinearLayout
            android:id="@+id/activity_bar_chatBar"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@color/chatActivityMessageBar"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mySecondaryColor"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/activity_chat_addPhoto"
                    android:layout_width="30dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_baseline_photo_camera_24"
                    android:layout_height="30dp"/>
                <EditText
                    android:id="@+id/activity_chat_editText"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:maxLines="5"
                    android:fontFamily="@font/sf_pro"
                    android:textColor="@color/normal_text"
                    android:layout_marginEnd="8dp"
                    android:textSize="18dp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/chat_view_back"
                    android:hint="New message..."
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/activity_chat_send"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/send_round_button"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>
