<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="activityContactsRvAdapter"
            type="com.mu.jan.sparkchat.ui.adapters.ContactsActivityRvAdapter" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        tools:context=".ui.activities.ContactsActivity">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_contacts_toolbar"
            android:layout_width="match_parent"
            android:elevation="0dp"
            app:navigationIcon="@drawable/back_navigate_arrow_accent"
            android:layout_height="?android:actionBarSize">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginEnd="23dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/contacts"
                    android:textColor="@color/normal_text"
                    android:fontFamily="@font/sf_pro_semi_bold"
                    />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mySecondaryColor"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:adapter="@{activityContactsRvAdapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:descendantFocusability="blocksDescendants"
            />
    </LinearLayout>

</layout>
